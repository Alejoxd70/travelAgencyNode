extends ./layout/index

block content 
    main.container.mt-5
        h1.text-center.mt-5 #{page}

        blockquote.text-center Clients experiences
        include ./layout/block_reviews

        .row
            .col-md-12
                h2.d-block.w-100.text-center Add new review

                if(errors)
                    each error in errors
                        .alert.col.alert-danger.text-center= error.message

            .row.justify-content-center.col
                .col-md-8
                    form(action="/reviews" method="POST")
                        .form-group
                            label(for="name") Name 
                            input#name(type="text", placeholder="Your name", name="name", class="form-control" value=name)   
                        .form-group
                            label(for="email") Email 
                            input#email(type="email", placeholder="Your email", name="email", class="form-control" value=email)   
                        .form-group
                            label(for="message") Message
                            textarea#message(name="message", placeholder="Your review", rows="3", class="form-control")= message 

                        input.btn.btn-success.btn-block(type="submit")  